<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Appenders>
		<Console name="Console">
			<PatternLayout disableAnsi="false"
			               pattern="[%highlight{%d{yyyy-MMM-dd HH:mm:ss:SSS}}{FATAL=Magenta, ERROR=Red, WARN=Yellow, INFO=White, DEBUG=Green, TRACE=Blue}] [%highlight{%-5level}{FATAL=Magenta, ERROR=Red, WARN=Yellow, INFO=White, DEBUG=Green, TRACE=Blue}] {%style{%c}{Cyan}} - %highlight{%msg%n%throwable}{FATAL=Magenta, ERROR=Red, WARN=Yellow, INFO=White, DEBUG=Green, TRACE=Blue}"/>
			<ThresholdFilter level="INFO"/>
		</Console>
		<RollingFile name="rollingFile" fileName="logs/neptunes-dashboard.log" filePattern="logs/neptunes-dashboard.log"
		             ignoreExceptions="false">
			<PatternLayout pattern="[%d{yyyy-MMM-dd HH:mm:ss:SSS}] [%-5level] {%c} - %msg%n%throwable"/>
			<ThresholdFilter level="DEBUG"/>
			<Policies>
				<SizeBasedTriggeringPolicy size="10MB"/>
			</Policies>
			<DefaultRolloverStrategy max="5"/>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Root level="TRACE">
			<AppenderRef ref="Console"/>
			<AppenderRef ref="rollingFile"/>
		</Root>
		<Logger name="Exposed" level="INFO" additivity="false">
		</Logger>
		<Logger name="org.eclipse.jetty" level="INFO" additivity="false">
		</Logger>
	</Loggers>
</Configuration>